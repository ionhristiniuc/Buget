@model Buget.WebUI.ViewModels.LogOnViewModel

@{
    ViewBag.Title = "LogOn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HtmlHeader {
    @Styles.Render("~/Content/Site/common.css")
}

<h3>LogOn</h3>

<br />

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        @Html.DisplayNameFor(m => m.Login)
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.Login, new {@class = "form-control"})
                        <span class="input_error_message">
                            @Html.ValidationMessageFor(m => m.Login)
                        </span>
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-md-2">
                        @Html.DisplayNameFor(m => m.Password)
                    </div>
                    <div class="col-md-6">
                        @Html.PasswordFor(m => m.Password, new {@class = "form-control"})
                        <span class="input_error_message">
                            @Html.ValidationMessageFor(m => m.Password)
                        </span>
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-6">
                        <input type="submit" class="btn btn-default" value="Login"/>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section scripts {    
    @Scripts.Render("~/bundles/jqueryval")
}